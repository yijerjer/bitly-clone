<form action="#" method="post">
	Enter URL:
	<input type="text" name="long_url">
	<input type="submit" name="Submit">
</form>
<% if @error_msgs != nil %>
	<p><%= @error_msgs %></p>
<% end %>
<table border="1" cellpadding="10">
	<tr>
		<th>Long URL</th>
		<th>Short URL</th>
	</tr>
	<% @array.each do |row| %>
		<tr>
			<td><%= row.long_url %></td>
			<td><%= row.short_url %></td>
		</tr>
	<% end %>